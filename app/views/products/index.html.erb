<h1>As melhores ofertas para o seu prazer!</h1>
<div class="products-container">
<% @products.each do |product| %>

    <div class="flat-card">
      <img src="https://i.pinimg.com/564x/d1/d7/3e/d1d73e69b6f6e93c80bc621545cbe928.jpg">
      <div class="product-name">
        <h3> <%= product.name %> </h3>
      </div>
      <div class="product-price">
        <%= product.price %>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "Ver mais", product_path(product[:id]), class: "btn btn-flat w-100" %>
      </div>
    </div>
  <% end %>
</div>
