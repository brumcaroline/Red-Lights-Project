<h1>As melhores ofertas para o seu prazer!</h1>
<div class="container">
<% @products.each do |product| %>

    <div class="flat-card">
      <img src="https://www.ladrilar.com.br/wp-content/uploads/2020/12/cinza-escuro.png">
      <div class="product-name">
        <h3> <%= product.name %> </h3>
      </div>
      <div class="product-price">
        <%= product.price %>
      </div>
      <div class="bnt">
        <%= link_to "ver mais", products_path, class: "btn btn-flat" %>
      </div>
    </div>
<% end %>
</div>


