<h1>As melhores ofertas para o seu prazer!</h1>
<div class="products-container">
  <% @products.each do |product| %>
    <div class="flat-card">
      <img src="https://www.ladrilar.com.br/wp-content/uploads/2020/12/cinza-escuro.png">
      <div class="product-name">
        <h3> <%= product.name %> </h3>
      </div>
      <div class="product-price">
        <%= product.price %>
      </div>
      <div class="bnt">
        <%= link_to "Ver mais", product_path(product[:id]), class: "btn btn-flat" %>
      </div>
    </div>
<% end %>
</div>
