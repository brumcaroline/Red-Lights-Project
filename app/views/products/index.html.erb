<h1>As melhores ofertas para o seu prazer!</h1>
<div class = "container">
<div class="products-container mt-10">
  <% @products.each do |product| %>
    <div class="flat-card">
      <%= cl_image_tag product.photos.first.key, width: 400, height: 300, crop: :fit %>

      <div class="product-name mt-8 text-center">
        <p> <%= product.name %> </p>
      </div>
      <div class="product-price text-center">
        <%= "R$ #{product.price}" %>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "Ver mais", product_path(product[:id]), class: "btn btn-flat w-100" %>
      </div>
    </div>
  <% end %>
</div>
</div>
