
<div class="container mt-3">
  <div class = "row justify-content-center">
    <div class = "col-6 card-login">
      <div class= "text-center mb-3">
        <h1>Adicione um novo produto:</h1>
      </div>
      <%= simple_form_for(@product) do |f| %>
        <%= f.input :name, label: "Nome:", placeholder: 'Nome do produto' %>
        <%= f.input :price, label: "Preço:", placeholder: 'Preço por unidade' %>
        <%= f.input :category, label: "Categoria:", collection: Product::CATEGORY %>
        <%= f.input :description, label: "Descrição:", placeholder: 'Descrição do produto' %>
        <%= f.input :photos, label: "Carregar foto:", as: :file, input_html: { multiple: true } %>

        <%= f.submit "Salvar", class: "btn btn-success mt-3" %>
        <%= link_to "Voltar", profiles_products_path, class: "btn btn-dark mt-3" %>
      <% end %>
    </div>
  </div>
</div>
