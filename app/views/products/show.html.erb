<div class="container">

  <h1 class='text-center'>
    <%= @product.name %>
  </h1>


  <div class="row justify-content-center">
    <div class="col-4">

      <div class="card-trip">
        <img src="https://i.pinimg.com/564x/d1/d7/3e/d1d73e69b6f6e93c80bc621545cbe928.jpg" />
        <div class="card-trip-infos">
          <div>
            <h2><%= @product.name %></h2>
            <p><%= @product.description %></p>
            <p><%= @product.category %></p>
          </div>
          <h2 class="card-trip-pricing"><%= @product.price %></h2>
        </div>




      </div>











    </div>
  </div>


  <div class="row justify-content-center my-2">
    <div class="col-4">
      <div class="d-grid gap-2">
        <%= link_to "Comprar",  new_product_order_path(@product),  class: "btn btn-success btn-lg" %>
        <%= link_to "Voltar", root_path,  class: "btn btn-outline-secondary mt-5" %>
      </div>
    </div>
  </div>


</div>




