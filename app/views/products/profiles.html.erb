<div class = "container">

  <h1><%= "Bem vindo, #{current_user.email}!"%></h1>

  <h1>Produtos comprados:</h1>
  <div class="products-container">
    <% @purchased_products.each do |product| %>
      <div class="flat-card">
        <%= cl_image_tag product.photos.first.key, width: 400, height: 300, crop: :fit %>
        <div class="product-name text-center">
          <h3> <%= product.name %> </h3>
        </div>
        <div class="product-price text-center">
          <%= "R$ #{product.price}" %>
        </div>
        <div class="d-flex justify-content-center">
          <% order = Order.find_by(product: product, user: current_user) %>
          <%= link_to "Ver compra", order_path(order), class: "btn btn-flat" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class = "mt-5">
    <h1>Produtos adicionados por vocÃª:</h1>
    <div class="products-container">
      <% @my_products.each do |product| %>
        <div class="flat-card">
          <%= cl_image_tag product.photos.first.key, width: 400, height: 300, crop: :fit %>
          <div class="product-name text-center">
            <h3> <%= product.name %> </h3>
          </div>
          <div class="product-price text-center">
            <%= "R$ #{product.price}" %>
          </div>
          <div class="d-flex justify-content-evenly">
            <%= link_to "Ver", product_path(product[:id]), class: "btn btn-flat-profile" %>
            <%= link_to "Editar", edit_product_path(product[:id]), class: "btn btn-flat-profile" %>
            <%= link_to "Deletar", product_path(product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-flat-profile" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="products-container">
      <%= link_to "ADICIONAR UM NOVO PRODUTO", new_product_path, class: "btn btn-flat-add mt-3" %>
    </div>
  </div>
</div>
