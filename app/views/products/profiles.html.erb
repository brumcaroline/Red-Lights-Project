<h1><%= "Bem vindo #{current_user.email} "%></h1>

<h1>Produtos comprados:</h1>
<div class="products-container">
  <% @purchased_products.each do |product| %>
    <div class="flat-card">
      <img src="https://i.pinimg.com/564x/d1/d7/3e/d1d73e69b6f6e93c80bc621545cbe928.jpg">
      <div class="product-name">
        <h3> <%= product.name %> </h3>
      </div>
      <div class="product-price">
        <%= product.price %>
      </div>
      <div class="d-flex">
        <%= link_to "Ver a compra??", order_path("11"), class: "btn btn-flat" %>
      </div>
    </div>
  <% end %>
</div>

