<div class="container-order-show" >

  <div class="container mt-5">
    <h1>Confirme a sua compra:</h1>
  </div>

  <div class="container-order mt-4" >
    <div class = "row justify-content-center" >
      <div class = "col-5 card-login">
        <div class="card-product-new">
          <h2><%= @product.name %></h2>
          <%= cl_image_tag @product.photos.first.key, width: 400, height: 300, crop: :fit %>
          <%# <%= cl_image_tag @products.photo.new, width: 400, height: 300, crop: :fill %>
        </div>
        <div>
        <div class = "card-order mt-5">
        <%= simple_form_for [@product, @order] do |f| %>
          <%= f.input :quantity, :label => "Quantidade:", collection: (1..10)%>
          <%= f.submit "Confirmar", class: "btn btn-flat-add mt-2" %>
          <%= link_to "Voltar", product_path(@product), class: "btn btn-flat-voltar mt-2" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
